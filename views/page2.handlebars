                      <th data-field="Delete"></th>
                  </tr>
                </thead>

                <!-- Initial two rows where the user can enter information to be stored in SQL and displayed -->
                <tbody>
                {{#each inventory1}}
                    {{#if id}}
                        <tr>
                          <td>{{this.invName}}</td>
                          <td>{{this.invDesc}}</td> 
                          <td>{{this.invGroup}}</td>
                          <td>{{this.invWSP}}</td>
                          <td>{{this.invRTP}}</td>
                          <td>{{this.invStock}}</td>
                          <td>{{this.invMRP}}</td>
                          <td><form method = "POST" action ="/delete/{{this.id}}" ><button class="material-icons" value={{this.id}}>delete</button></form></td>
                        </tr>
                    {{/if}}
               {{/each}}
                    

                </tbody>

            </table> 
        </div>
    </div>
